---
let { alt = "", src = "", srcset = "" } = Astro.props;

const isShow = src ? true : null;

src = Astro.url.origin + src;
---
{
  isShow && (
    <img
      src={src}
      alt={alt}
      srcset={srcset}
      class="hero-image"
      fetchpriority="high"
      height="480"
      sizes="100vw"
      width="1600"
    />
  )
}
