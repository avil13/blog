{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "Classic",
    "allowJs": false,
    "strict": false,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "removeComments": false,
    "lib": ["ESNext", "dom"],
    "types": []
  },
  "exclude": [
    "node_modules",
    "**/_site",
    "**/dist",
    ".yarn/releases/*",
    "**/__mocks__/**/*",
    "**/__tests__/**/*",
    "**/build/**/*",
    "**/build-es5/**/*"
  ]
}
